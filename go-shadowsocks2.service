[Unit]
Description=go-shadowsocks2 Server
After=network.target

[Service]
Type=simple
User=root
Environment="SERVER=0.0.0.0" "SERVERPORT=8388" "CIPHER=chacha20-ietf-poly1305" "PASSWD=foobar"
ExecStart=/usr/bin/go-shadowsocks2 -s $SERVER:$SERVERPORT -cipher $CIPHER -key $PASSWD

[Install]
WantedBy=default.target
